<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <Button
            android:id="@+id/button1c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import Agency Commission Bill pdf" 
            android:background="@drawable/custom_button"/>

<View style="@style/Divider"/>
        <Button
            android:id="@+id/button2c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count Of Agency Records" 
            android:background="@drawable/custom_button"/>
<View style="@style/Divider"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Count Of NB Records" 
            android:background="@drawable/custom_button"/>
<View style="@style/Divider"/>
        <Button
            android:id="@+id/button2a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Count Of Policy Master Records"
            android:background="@drawable/custom_button" />
<View style="@style/Divider"/>
        <Button
            android:id="@+id/button2b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Count Of Dues Records" 
            android:background="@drawable/custom_button"/>
<View style="@style/Divider"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <Button
            android:id="@+id/button1d"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Backup" 
            android:background="@drawable/custom_button"/>
<View
    android:layout_width="1dp"
    android:layout_height="40dp"
    android:background="@color/title_separator" 
    android:layout_toRightOf="@+id/button1d"/>
        <Button
            android:id="@+id/button2d"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Restore" 
            android:background="@drawable/custom_button"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/button1d"
            android:layout_below="@+id/button1d"
            android:text="Backup in Gmail"  android:background="@drawable/custom_button" />

</RelativeLayout>
<View style="@style/Divider"/>
</LinearLayout>
