<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000011"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="5dp">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
     

   <Button
          android:id="@+id/button0"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Policy Status"
          android:textColor="#ffffff"
          android:background="@drawable/button6_background"
          android:layout_marginBottom="5dp"
          />  
          
   <Button
          android:id="@+id/button7"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Revival Quotation"
          android:textColor="#ffffff"
          android:background="@drawable/button6_background"
            android:layout_marginBottom="5dp"
          />
   <Button
          android:id="@+id/button8"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Surrender/Loan Enquiry"
          android:textColor="#ffffff"
          android:background="@drawable/button6_background"
            android:layout_marginBottom="5dp"
          />
      <Button
          android:id="@+id/button1"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Lapsed List"
          android:textColor="#ffffff"
          android:layout_marginBottom="5dp"
          />
      <Button
          android:id="@+id/button2"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Birthday List"
          android:textColor="#ffffff"
          android:background="@drawable/button2_background"
          android:layout_marginBottom="5dp"
          />
      <Button
          android:id="@+id/button3"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Maturity List"
          android:textColor="#ffffff"
          android:background="@drawable/button3_background"
          android:layout_marginBottom="5dp"
          />
      <Button
          android:id="@+id/button4"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Policy Calender"
          android:textColor="#ffffff"
          android:background="@drawable/button4_background"
          android:layout_marginBottom="5dp"
          />
      <Button
          android:id="@+id/button5"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Policy List"
          android:textColor="#ffffff"
          android:layout_marginBottom="5dp"
          android:background="@drawable/button5_background"
          />
      <Button
          android:id="@+id/button6"
          android:layout_height="44dp"
          android:layout_width="fill_parent"
          android:text="Save Portal Id"
          android:textColor="#ffffff"
          android:background="@drawable/button6_background"
          />  
             </LinearLayout>
    </ScrollView>
</LinearLayout>

