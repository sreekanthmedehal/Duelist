<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:weightSum="1">
	<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:padding="0dp"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="0dp"
				android:layout_alignParentTop="true"
				android:id="@+id/mainLinearLayout1">
			<Button
			         android:textColor="@color/white"
					android:text="close"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:padding="0dp"
					android:paddingTop="0dp"
					android:id="@+id/mainCloseButton1"/>
			<Button
			         android:textColor="@color/white"
					android:text="Download"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:padding="0dp"
					android:paddingTop="0dp"
					android:visibility="visible"
					android:id="@+id/download"/>
	</LinearLayout>	

	<WebView
	    android:id="@+id/webview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/mainLinearLayout1"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginLeft="0dp" />

	<RelativeLayout
			android:visibility="invisible"
			android:background="@android:color/black"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/mainAdChildLayout"
			android:weightSum="1">
		<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:padding="0dp"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="0dp"
				android:layout_marginTop="0dp"
				android:layout_alignParentTop="true"
				android:id="@+id/mainLinearLayout">
			<Button
			         android:textColor="@color/white"
					android:text="close"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dp"
					android:padding="0dp"
					android:paddingTop="0dp"
					android:id="@+id/mainCloseButton"/>
	
		

			<TextView
					android:id="@+id/mainTitleText"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="0dp"
					android:layout_marginRight="65dp"
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:gravity="center"
					android:scrollHorizontally="true"
					android:ellipsize="end"
					android:maxLines="1"
					android:textStyle="bold"
					/>
		</LinearLayout>
		<RelativeLayout
				android:layout_below="@id/mainLinearLayout"
				android:background="@android:color/holo_blue_dark"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/mainBrowserLayout"
				android:weightSum="1">

			

		</RelativeLayout>
	</RelativeLayout>

</RelativeLayout>